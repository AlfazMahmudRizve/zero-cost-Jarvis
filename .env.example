# ========================================
# JARVIS AI ASSISTANT - ENVIRONMENT CONFIG
# Copy this file to .env and fill in your values
# ========================================

# --- LLM Brain ---
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Get from: https://console.groq.com/keys (Optional - Fallback)
GROQ_API_KEY=your_groq_api_key_here

# --- Model Selection ---
# Options: "gemini", "groq"
LLM_PROVIDER=gemini
GEMINI_MODEL=gemini-1.5-flash
GROQ_MODEL=llama-3.1-70b-versatile

# --- STT (Speech-to-Text) ---
# Options: "local" (faster-whisper), "groq" (cloud)
STT_PROVIDER=local
WHISPER_MODEL_SIZE=base

# --- TTS (Text-to-Speech) ---
# Edge TTS Voice - See: https://github.com/rany2/edge-tts
TTS_VOICE=en-US-AriaNeural
TTS_RATE=+10%

# --- Wake Word ---
WAKE_WORD=jarvis
WAKE_WORD_SENSITIVITY=0.6

# --- Memory ---
CHROMA_PERSIST_PATH=./data/chroma_db
MEMORY_COLLECTION_NAME=jarvis_memory

# --- Vision ---
ENABLE_VISION=false
SCREENSHOT_INTERVAL=5

# --- Logging ---
LOG_LEVEL=INFO
LOG_FILE=./logs/jarvis.log

# --- Audio ---
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
SILENCE_THRESHOLD=500
SILENCE_DURATION=1.5
